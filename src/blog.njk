<h1>Blog Archive</h1>

<ol>
    {%- for post in collections.post -%}
    <li>
        <a href='{{ post.url }}'>{{ post.data.title }}</a>
        <!-- <p>{{ post.data.time }}</p> -->
        <p>{{ post.data.description }}</p>
        <img class="preview" src="{{ post.data.image }}" alt="{{ post.data.imageAlt}}">
    </li>
    {%- endfor %}
</ol>